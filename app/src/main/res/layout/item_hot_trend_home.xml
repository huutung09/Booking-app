<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintHotTrendDetail"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewImageHotTrend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imvHotTrend"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_background_splash" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvNameHotTrend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Yen Tu Pagoda"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/cardViewImageHotTrend"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imvLocationHotTrend"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_location_home"
        app:layout_constraintStart_toEndOf="@id/cardViewImageHotTrend"
        app:layout_constraintTop_toBottomOf="@id/tvNameHotTrend" />

    <TextView
        android:id="@+id/tvAddressHotTrend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Quang Ninh, Viet Nam"
        android:textColor="#7f949f"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/imvLocationHotTrend"
        app:layout_constraintTop_toBottomOf="@id/tvNameHotTrend" />

    <TextView
        android:id="@+id/tvDescriptionHotTrend"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_regular"
        android:maxLines="2"
        android:textColor="#7f949f"
        app:layout_constraintStart_toEndOf="@id/cardViewImageHotTrend"
        app:layout_constraintTop_toBottomOf="@id/tvAddressHotTrend" />

    <RatingBar
        android:id="@+id/ratingBarHotTrend"
        style="@android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:isIndicator="true"
        android:max="5"
        android:scaleX=".5"
        android:scaleY=".5"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp"
        app:layout_constraintStart_toEndOf="@id/cardViewImageHotTrend"
        app:layout_constraintTop_toBottomOf="@id/tvDescriptionHotTrend" />


</androidx.constraintlayout.widget.ConstraintLayout>
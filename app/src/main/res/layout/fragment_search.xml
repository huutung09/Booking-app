<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:paddingHorizontal="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Tour search"
        android:textColor="@color/white"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.97"
            android:background="@drawable/custom_background_search"
            android:drawableStart="@drawable/ic_location_home"
            android:drawablePadding="7dp"
            android:fontFamily="@font/montserrat_regular"
            android:hint="@string/e_g_ha_noi_viet_nam"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="#7f949f"
            android:textSize="15sp"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/ivSearchIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:padding="10dp"
            android:src="@drawable/ic_search"
            android:background="@drawable/custom_background_icon"
             />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/revFavorite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>

</LinearLayout>
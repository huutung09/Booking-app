<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Booking" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--        Full screen-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="StyleBottomNavigationViewInactive">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:color">#AEAEAE</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="StyleBottomNavigationViewActive">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:color">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>
</resources>